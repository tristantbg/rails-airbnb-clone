<% unless @freelancer_contracts.empty? %>
  <h1>Received proposals</h1>
<% end %>

<% @freelancer_contracts.each do |contract| %>

<div class="conversation">
  <div class="message answer">
    <img class="avatar-large" src="<%= current_user.profile_image %>">
    <div class="message-name">
      <%= link_to user_path(contract.user) do %>
        <p>From</p>
        <h3><%= contract.user.first_name %> <%= contract.user.last_name %></h3>
      <% end %>
    </div>
    <div class="message-body">
      <%= contract.description %>
    </div>
    <div class="message-status">
      <input type="checkbox" value="<%= contract.status %>" name="freelance-response" data-indeterminate='true'>
    </div>
  </div>
</div>

<% end %>

<% unless @employer_contracts.empty? %>
