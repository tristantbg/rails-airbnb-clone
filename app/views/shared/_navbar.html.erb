<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <h1 class="m0">BRAIN2BRAIN</h1>
  <% end %>

  <!--   Searchbar  -->  
  <div id="search" class="form-group inline m0">
    <%= form_tag(users_path, method: :get, class: "form-inline") do %>
      <%= text_field_tag 'skill', nil, placeholder: 'Which skill ?', class: "form-control" %>
      <%= text_field_tag 'address', nil, placeholder:'Where ?', class: "form-control" %>
      <%= submit_tag "Search", class: "form-control" %>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user) do %>
              <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to user_contracts_path(current_user) do %>
              <%= t(".profile", default: "Contracts") %>
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
        <li>
            <%= link_to user_path(current_user) do %>
              <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to user_contracts_path(current_user) do %>
              <%= t(".profile", default: "Contracts") %>
            <% end %>
          </li>
          <% end %>
      </ul>
    </div>
  </div>
</div>