  <div class="row">
    <div class="col-lg-3 kill-padding">
      <div class="user-profile-image" style="background-image: url(<%= @user.profile_image %>)">
      </div>
    </div>
    <div class="col-lg-offset-1 col-lg-7 kill-padding">

      <div class="filet">
        <div class="filet-header">
          <div class="freelance-info">
            <h2><%= @user.first_name %> <%= @user.last_name %></h2>
            <h4><%= @user.skills.first.name %> Specialist <%= @user.price > 300 ? 'Senior' : 'Junior' %></h4>
            <p>From <strong><%= @user.price %> â‚¬</strong> / day</p>
          </div>
          <div class="freelance-booking">

            <% if @user == current_user %>
            <%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-default" %>
            <% elsif user_signed_in %>
            <h4>Brain Available</h4>
            <%= link_to 'Book this freelance', new_skill_contract_path(@skill), class: "btn btn-default", "data-toggle": "modal", "data-target": ".bs-example-modal-lg" %>
            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  ...
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>

        <div class="filet-body my4">
          <p class="text-justify padding-top">
            <%= @user.description %>
          </p>
        </div>
        <div class="row">
          <div class="px2"><%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=800x400&sensor=false&maptype=roadmap&markers=color:red|#{@user.address}", class: "map-large", width: "100%" %>
          </div>
        </div>
      </div>
    </div>
  </div>
