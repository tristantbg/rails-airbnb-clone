<% if params[:skill].nil? && params[:address].nil? %>  
  <div class="banner">
    <div class="banner-content">
      <h1 class="m0">CONNECT BRAINS</h1>
      <h1 class="m0">TO</h1>
      <h1 class="m0"><span
         class="txt-rotate"
         data-period="3000"
         data-rotate='["TEAMS", "PROJECTS", "BRAINS"]'>
        </span>
      </h1>
    </div>
  </div>
<% end %>

<div id="users-overview" class="row">
  <div class="row text-center">
    <% if @users.empty? %>
      <h4>No results found.</h4>
      <h4>Please broaden your search.</h4>
    <% end %>
  </div>
  <% @users.each do |user| %>
  <% if user != current_user %>
  <div class="col-xs-12 col-sm-4 col-md-3">
    <div class="card m0 mb3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= user.profile_image %>');">
      <div class="card-category">
      <%= user.address %>
      <h5><%= user.first_name.capitalize %> <%= user.last_name.capitalize %></h5>
      </div>
      <div class="card-description c10">
        <div class="col-sm-6 pl0">
          <h5 class="m0"><%= user.skills.first.name %></h5>
        </div>
        <div class="col-sm-6 pr0 text-right">
          <%= user.price %>â‚¬
        </div>
      </div>
      <a class="card-link" href="<%= user_path(user) %>" ></a>
    </div>
  </div>
  <% else %>
  <!-- Not signed in -->
  <% end %>
  <% end %>
</div>
